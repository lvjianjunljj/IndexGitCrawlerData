<Window x:Class="IndexGitCrawlerData.DownloadZip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndexGitCrawlerData"
        mc:Ignorable="d"
        Title="DownloadZip" Height="300" Width="600" ResizeMode="NoResize">
    <Grid>
        <TextBlock Margin="125,10,125,190" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" >Download Path</TextBlock>
        <TextBox Margin="30,100,30,134" FontSize="15" BorderThickness="1" Name="downloadPath"/>
        <Button Content="Download Zip" FontSize="25" Margin="175,170,175,40" Click="Download_Zip"/>
    </Grid>
</Window>
